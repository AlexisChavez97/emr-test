<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Medical Record</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <th scope="row"><%= patient.id %></th>
        <td><%= link_to patient.first_name, patient_path(patient) %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.mr %></td>
      </td>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add patient', new_emergency_transfer_forms_path, class: "btn btn-primary" %>